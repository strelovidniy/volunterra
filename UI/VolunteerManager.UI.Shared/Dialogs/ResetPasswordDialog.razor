@using MudBlazor

<MudDialog Style="width: 800px; overflow: hidden">
    <DialogContent>
        <MudForm onsubmit="@OnSubmitAsync"
                 Style="padding-bottom: 10px"
                 @ref="_form">
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField T="string"
                                  Label="Email"
                                  Variant="Variant.Outlined"
                                  id="username"
                                  Name="username"
                                  @bind-value="_email"
                                  Validation="@ValidateEmailField" />

                </MudItem>

                <MudItem Class="d-flex justify-center"
                         xs="12">
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               Size="Size.Large"
                               class="w-100"
                               Disabled="@_processing">
                        @if (_processing)
                        {
                            <MudProgressCircular Class="ms-n1"
                                                 Size="Size.Small"
                                                 Indeterminate="true" />
                            <MudText Class="ms-2">
                                Resetting Password
                            </MudText>
                        }
                        else
                        {
                            <MudText>
                                Reset Password
                            </MudText>
                        }
                    </MudButton>
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
</MudDialog>